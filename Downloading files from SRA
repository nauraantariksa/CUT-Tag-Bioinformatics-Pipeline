#SRA ToolKit installation requires sudo, cannot be done on the HPC
#download SRA ToolKit (for MacOS)

wgest --output sratoolkit.tar.gz https://ftp-trace.ncbi.nlm.nih.gov/sra/sdk/current/sratoolkit.current-mac64.tar.gz
tar -xzf sratoolkit.current-mac64.tar.gz

#add SRA ToolKit to path

export PATH=$PATH:$PWD/sratoolkit.3.0.0-mac64/bin

#checking if SRA ToolKit is properly installed to MacOS

time sratoolkit.3.1.1-mac-x86_64/bin/fastq-dump --stdout -X 2 SRR390728

#if the addition to PATH works, it should produce an output as the following
#Read 2 spots for SRR390728
#Written 2 spots for SRR390728
